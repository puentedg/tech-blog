<div class="column is-6">
  <form>
    <h3 class="title header-style">Create New Post:</h3>
    <div class="field">
      <label class="label">Post Title:</label>
      <div class="control">
        <input class="input" type="text" id="title" />
      </div>
    </div>
    <div class="field">
      <label class="label">Date:</label>
      <input class="input" type="datetime-local" id="date" name="date" />
    </div>
    <div class="field">
      <label class="label">Content:</label>
      <textarea class="textarea" id="content" rows="5"></textarea>
    </div>
    <button id="new-post" type="button" class="button is-link">Submit</button>
  </form>
</div>
<div class="card mb-5">
  <div class="card-header">
    <p class="card-header-title header-style">
      <a href="/post/{{id}}">{{title}}</a>
    </p>
  </div>
  <div class="card-content">
    <div class="content">
      {{format_date date}}
      <br />
      <br />
    </div>
  </div>
</div>
<script src="/js/createPost.js"></script>