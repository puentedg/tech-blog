 <div class="column is-6">
      <form class="post-form">
        <h3 class="title">Update Post:</h3>
        <div class="field">
          <label class="label">Post:</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="title"
              value="{{title}}"
            /></div>
        </div>
        <div class="field">
          <label class="label">Date:</label>
          <input class="input" type="datetime-local" id="date" name="date" />
        </div>
        <div class="field">
          <label class="label">Description:</label>
          <textarea
            class="textarea"
            id="description"
            rows="5"
          >{{description}}</textarea>
        </div>
        </div>
        <button
          id="update-event"
          type="button"
          class="button is-link"
        >Submit</button>
      </form>
    </div>
    <script src="/js/editPost.js"></script>
  </section>
</div>